{
  "manifest_version": 3,
  "name": "X Timeline Slop Cleaner",
  "version": "1.4",
  "description": "Clean up your timeline! Press f to mark the tweet at the top as slop (not interested).",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["https://x.com/*"],
      "js": ["main.js"]
    }
  ],
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{30310d70-68ed-4421-90da-844ab553dd2e}"
    }
  }
}
